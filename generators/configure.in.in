AC_ARG_WITH(libgs,
	[AC_HELP_STRING(--with-libgs, [Where the Ghostscript library is installed])],
	[],
	with_libgs=check)
LIB_GS=
if test "x$with_libgs" != xno; then
	AUX="$LDFLAGS"
	LDFLAGS="-L$withval $LDFLAGS"
	KDE_CHECK_LIB(gs, gsapi_new_instance, LIB_GS=-lgs LIB_GS_PATH="$withval")
	if test "x$with_libgs" != xcheck && test -z "$LIB_GS"; then
		AC_MSG_ERROR([--with-libgs was given, but test for libgs failed])
	fi
	LDFLAGS="$AUX"
fi
AC_SUBST(LIB_GS)
AC_SUBST(LIB_GS_PATH)
		    
AM_CONDITIONAL(include_ghostscript, test -n "$LIB_GS")
   
	      
